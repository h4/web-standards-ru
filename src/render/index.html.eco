<h2><a href="/news/">Новости</a> <a href="/feed/news/">RSS</a></h2>
<ul>
<% for post in @getCollection('news').toJSON().slice(0, 25): %>
	<li><a href="<%= post.url %>"><%- post.title %></a></li>
<% end %>
</ul>

