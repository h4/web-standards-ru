<!DOCTYPE html>
<html lang="ru">
<head>
	<title><%- @htmlTitle() %></title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="/styles/screen.css">
</head>
<body>

	<header block="header">
<% if @isIndex(@document): %>
		<h1 elem="title">
			<span elem="text"><%= @site.title %></span>
		</h1>
<% else: %>
		<p elem="title">
			<a href="/" elem="link">
				<span elem="text"><%= @site.title %></span>
			</a>
		</p>
<% end %>
		<p elem="text"><%= @site.description %></p>
		<nav block="menu">
			<ul>
				<li elem="item"><a href="/news/" elem="link">Новости</a></li>
				<li elem="item"><a href="/articles/" elem="link">Статьи</a></li>
				<li elem="item"><a href="/videos/" elem="link">Видео</a></li>
				<li elem="item"><a href="/books/" elem="link">Книги</a></li>
			</ul>
		</nav>
	</header>

	<main block="main">
		<%- @content %>
	</main>

	<footer block="footer">
		<p>Веб-стандарты © 2006—<%= @getDate(@site.date, 'YYYY') %></p>
	</footer>

	<div id="grid">
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
	</div>

	<script src="/scripts/script.js"></script>

</body>
</html>
