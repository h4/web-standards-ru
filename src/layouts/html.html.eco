<!DOCTYPE html>
<html lang="ru">
<head>
	<title><%- @htmlTitle() %></title>
	<meta charset="utf-8">
	<link rel="stylesheet" href="/styles/screen.css">
</head>
<body>
	<header class="header">
		<div class="header__logo">
<% if @isIndex(@document): %>
			<h1 class="header__title"><%= @site.title %></h1>
<% else: %>
			<p class="header__title"><a href="/"><%= @site.title %></a></p>
<% end %>
			<p class="header__subtitle"><%= @site.description %></p>
		</div>
		<nav class="menu">
			<ul>
				<li><a href="/news/" class="menu__item">Новости</a></li>
				<li><a href="/articles/" class="menu__item">Статьи</a></li>
				<li><a href="/videos/" class="menu__item">Видео</a></li>
				<li><a href="/books/" class="menu__item">Книги</a></li>
			</ul>
		</nav>
	</header>
	<main class="main">
		<%- @content %>
	</main>
	<footer class="footer">
		<p>Веб-стандарты © 2006—<%= @getDate(@site.date, 'YYYY') %></p>
	</footer>
	<div id="grid">
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
	</div>
	<script src="/scripts/script.js"></script>
</body>
</html>
