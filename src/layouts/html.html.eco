<!DOCTYPE html>
<html lang="ru">
<head>
	<title><%- @htmlTitle() %></title>
	<meta charset="utf-8">
	<link rel="stylesheet" href="/styles/screen.css">
</head>
<body>

	<header class="header">
<% if @isIndex(@document): %>
		<h1 class="header__title">
			<span class="header__text"><%= @site.title %></span>
		</h1>
<% else: %>
		<p class="header__title">
			<a href="/" class="header__link">
				<span class="header__text"><%= @site.title %></span>
			</a>
		</p>
<% end %>
		<p class="header__text"><%= @site.description %></p>
		<nav class="menu">
			<ul>
				<li class="menu__item"><a href="/news/" class="menu__link">Новости</a></li>
				<li class="menu__item"><a href="/articles/" class="menu__link">Статьи</a></li>
				<li class="menu__item"><a href="/videos/" class="menu__link">Видео</a></li>
				<li class="menu__item"><a href="/books/" class="menu__link">Книги</a></li>
			</ul>
		</nav>
	</header>
	<main class="main">
		<%- @content %>
	</main>
	<footer class="footer">
		<p>Веб-стандарты © 2006—<%= @getDate(@site.date, 'YYYY') %></p>
	</footer>
	<div id="grid">
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
		<div></div>
	</div>
	<script src="/scripts/script.js"></script>
</body>
</html>
