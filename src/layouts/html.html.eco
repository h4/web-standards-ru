<!DOCTYPE html>
<html lang="ru">
<head>
	<title><%= @htmlTitle() %></title>
	<meta charset="utf-8">
</head>
<body>
	<header>
<% if @isIndex(@document): %>
		<h1><%= @site.title %></h1>
<% else: %>
		<p><a href="/"><%= @site.title %></a></p>
<% end %>
		<p><%= @site.description %></p>
	</header>
	<%- @content %>
	<footer>
		<p>Веб-стандарты © 2006—<%= @getDate(@site.date, 'YYYY') %></p>
	</footer>
</body>
</html>
